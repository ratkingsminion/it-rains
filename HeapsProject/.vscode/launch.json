	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch Chrome against localhost",
			"request": "launch",
			"type": "chrome",
			"internalConsoleOptions": "openOnSessionStart",
			"url": "file://${workspaceFolder}/publish/index.html",
			"webRoot": "${workspaceFolder}",
			"preLaunchTask": {
				"type" : "haxe",
				"args" : "active configuration"
			}
		},
		{
			"name": "HashLink",
			"request": "launch",
			"type": "hl",
			"cwd": "${workspaceRoot}",
			"preLaunchTask": {
				"type" : "haxe",
				"args" : "active configuration"
			},
			"internalConsoleOptions": "openOnSessionStart"
		}
	]
}